{inputs, ...}: {
  imports = [inputs.disko.nixosModules.default];
  boot.loader.grub.enable = true;
  disko.devices.disk.main = {
    type = "disk";
    device = "/dev/vda";
    content = {
      type = "gpt";
      partitions = {
        boot = {
          size = "1M";
          type = "EF02"; # biosboot
          priority = 1; # Needs to be first partition
        };
        root = {
          size = "100%";
          content = {
            type = "filesystem";
            format = "ext4";
            mountpoint = "/";
          };
        };
      };
    };
  };
}
